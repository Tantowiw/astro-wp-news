---
import MainLayout from '../layouts/MainLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { searchPosts } from '../lib/data';
import { format } from 'date-fns';
import { id } from 'date-fns/locale';

const url = new URL(Astro.request.url);
const query = url.searchParams.get('q') || '';
const posts = await searchPosts(query);
---

<MainLayout title={`Hasil Pencarian: ${query} - NewsPortal`}>
  <Header />

  <main class="pt-32 pb-16 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Page Header -->
      <div class="mb-12 border-b border-gray-100 pb-8">
        <h1 class="text-3xl md:text-4xl font-bold text-gray-900 flex items-center">
          <span class="bg-blue-600 w-3 h-10 mr-4 rounded-full"></span>
          Hasil Pencarian
        </h1>
        <p class="mt-4 text-gray-500 text-lg">
          Menampilkan {posts.length} hasil untuk kata kunci "<span class="font-semibold text-gray-900">{query}</span>"
        </p>
      </div>

      <!-- Posts Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => (
          <article class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden border border-gray-100 flex flex-col h-full">
            <div class="relative h-48 overflow-hidden group">
               <a href={`/${post.slug}`}>
                <img 
                  src={post.image} 
                  alt={post.title} 
                  class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                />
              </a>
              <a href={`/category/${post.categorySlug}`} class="absolute top-4 left-4 bg-white/90 backdrop-blur-sm px-3 py-1 text-xs font-bold text-blue-600 rounded-full uppercase tracking-wide hover:bg-blue-600 hover:text-white transition-colors">
                {post.category}
              </a>
            </div>
            <div class="p-6 flex flex-col flex-grow">
              <div class="flex items-center text-xs text-gray-500 mb-3">
                <span class="font-medium">{post.author}</span>
                <span class="mx-2">â€¢</span>
                <time>{format(new Date(post.date), 'd MMMM yyyy', { locale: id })}</time>
              </div>
              <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2 hover:text-blue-600 transition-colors" set:html={post.title}>
              </h3>
              <p class="text-gray-600 text-sm line-clamp-3 mb-4 flex-grow">
                {post.excerpt}
              </p>
              <a href={`/${post.slug}`} class="inline-flex items-center text-blue-600 font-semibold text-sm hover:underline mt-auto">
                Baca Selengkapnya
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
              </a>
            </div>
          </article>
        ))}
      </div>

      {posts.length === 0 && (
        <div class="text-center py-20 bg-gray-50 rounded-xl border border-gray-100 border-dashed">
          <svg class="w-16 h-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
          <p class="text-gray-500 text-lg font-medium">Tidak ada hasil ditemukan.</p>
          <p class="text-gray-400 text-sm mt-2">Coba gunakan kata kunci lain.</p>
        </div>
      )}

    </div>
  </main>

  <Footer />
</MainLayout>
