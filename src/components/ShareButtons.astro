---
/**
 * Social Share Buttons Component
 * Allows sharing articles to Facebook, Twitter, and WhatsApp
 */

interface Props {
  title: string;
  url: string;
  description?: string;
}

const { title, url, description = "" } = Astro.props;

// Encode URL and text for safe sharing
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
const encodedDescription = encodeURIComponent(description);

// Social share URLs
const shareLinks = {
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
  twitter: `https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`,
  whatsapp: `https://wa.me/?text=${encodedTitle}%20${encodedUrl}`,
};
---

<div class="share-buttons-container">
  <p class="share-label">Bagikan artikel ini:</p>
  
  <div class="share-buttons-group">
    <!-- Facebook Share -->
    <a
      href={shareLinks.facebook}
      target="_blank"
      rel="noopener noreferrer"
      class="share-button facebook"
      title="Bagikan ke Facebook"
      onclick="window.open(this.href, 'facebook-share', 'width=600,height=400'); return false;"
    >
      <svg
        class="share-icon"
        viewBox="0 0 24 24"
        fill="currentColor"
        aria-hidden="true"
      >
        <path
          d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
        ></path>
      </svg>
      Facebook
    </a>

    <!-- Twitter Share -->
    <a
      href={shareLinks.twitter}
      target="_blank"
      rel="noopener noreferrer"
      class="share-button twitter"
      title="Bagikan ke Twitter"
      onclick="window.open(this.href, 'twitter-share', 'width=600,height=400'); return false;"
    >
      <svg
        class="share-icon"
        viewBox="0 0 24 24"
        fill="currentColor"
        aria-hidden="true"
      >
        <path
          d="M23.953 4.57a10 10 0 002.856-3.915 9.954 9.954 0 01-2.866.836 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"
        ></path>
      </svg>
      Twitter
    </a>

    <!-- WhatsApp Share -->
    <a
      href={shareLinks.whatsapp}
      target="_blank"
      rel="noopener noreferrer"
      class="share-button whatsapp"
      title="Bagikan ke WhatsApp"
    >
      <svg
        class="share-icon"
        viewBox="0 0 24 24"
        fill="currentColor"
        aria-hidden="true"
      >
        <path
          d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.67-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.076 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421-7.403h-.004a9.87 9.87 0 00-9.746 9.798c0 2.566.967 4.92 2.719 6.718L3.24 21.35c-.384 1.126-.393 2.33.084 3.427.557 1.364 1.885 2.98 3.414 3.581.945.385 2.03.461 3.079.331l.321-.021a10.286 10.286 0 009.424-10.excluded c0-5.505-4.491-9.998-10.004-9.998zm7.784 18.718h-.001a1.923 1.923 0 01-1.898-2.718c.624-1.924 2.304-3.51 4.157-3.51a1.923 1.923 0 011.898 2.718c-.624 1.924-2.304 3.51-4.157 3.51z"
        ></path>
      </svg>
      WhatsApp
    </a>
  </div>
</div>

<style>
  .share-buttons-container {
    margin: 2rem 0;
    padding: 1.5rem;
    background-color: #f9fafb;
    border-radius: 0.5rem;
    border: 1px solid #e5e7eb;
  }

  .share-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: #374151;
    margin: 0 0 1rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .share-buttons-group {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .share-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    border-radius: 0.375rem;
    font-weight: 600;
    font-size: 0.875rem;
    text-decoration: none;
    transition: all 0.2s ease-in-out;
    border: none;
    cursor: pointer;
    color: white;
    text-transform: capitalize;
  }

  .share-icon {
    width: 1.25rem;
    height: 1.25rem;
  }

  /* Facebook Button */
  .share-button.facebook {
    background-color: #1877f2;
  }

  .share-button.facebook:hover {
    background-color: #166fe5;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(24, 119, 242, 0.3);
  }

  /* Twitter Button */
  .share-button.twitter {
    background-color: #1da1f2;
  }

  .share-button.twitter:hover {
    background-color: #1a91da;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(29, 161, 242, 0.3);
  }

  /* WhatsApp Button */
  .share-button.whatsapp {
    background-color: #25d366;
  }

  .share-button.whatsapp:hover {
    background-color: #20ba5a;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(37, 211, 102, 0.3);
  }

  /* Mobile Responsive */
  @media (max-width: 640px) {
    .share-buttons-group {
      gap: 0.5rem;
    }

    .share-button {
      flex: 1;
      justify-content: center;
      padding: 0.5rem 0.75rem;
      font-size: 0.75rem;
    }

    .share-icon {
      width: 1rem;
      height: 1rem;
    }
  }
</style>
